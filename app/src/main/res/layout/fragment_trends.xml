<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/ic_app_background"
    tools:context="com.pluggdd.burnandearn.view.fragment.OffersAndRewardsFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/offers_and_rewards_recycle_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

    </android.support.v7.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/loading_progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_gravity="center"
        android:gravity="center"
        android:visibility="visible" />

    <com.pluggdd.burnandearn.font.RobotoTextView
        android:id="@+id/txt_no_offers"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:lineSpacingExtra="8dp"
        android:text="@string/no_offers"
        android:textSize="20sp"
        android:textColor="@color/torqoise"
        app:typeface="robotoCondensed"
        android:visibility="gone"
        />

</FrameLayout>
