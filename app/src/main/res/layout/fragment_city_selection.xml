<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_background"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_logo"
        android:layout_marginTop="@dimen/login_margin"
        />

    <com.pluggdd.burnandearn.font.RobotoTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/app_promo"
        android:gravity="center"
        android:layout_below="@id/img_logo"
        android:textColor="@android:color/white"
        android:textSize="22sp"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="40dp"
        app:typeface="robotoCondensed"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:padding="5dp">

        <Spinner
            android:id="@+id/spinner_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:theme="@style/AppTheme.PopupOverlay">

        </Spinner>

        <View
            android:layout_width="match_parent"
            android:layout_below="@id/spinner_city"
            android:layout_height="1dp"
            android:layout_alignLeft="@id/spinner_city"
            android:background="@android:color/black"
            android:layout_alignRight="@id/spinner_city">

        </View>


    </RelativeLayout>

</LinearLayout>