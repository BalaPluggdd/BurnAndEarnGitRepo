<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_app_background"
    android:padding="10dp"
    tools:context="com.pluggdd.burnandearn.view.fragment.DashboardFragment">

    <android.support.v7.widget.CardView
        android:id="@+id/points_earned_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="5dp"
        app:cardCornerRadius="1dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="96dp"
                android:layout_height="96dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/img_profile"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:layout_gravity="center"/>

                <ProgressBar
                    android:id="@+id/profile_progress_bar"
                    style="?android:attr/android:progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center" />


            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="@string/congratulations"
                    android:textColor="@color/torqoise"
                    android:textSize="26sp"
                    app:typeface="robotoBoldCondensed" />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginTop="5dp"
                    android:gravity="center"
                    android:text="@string/your_total_points"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:typeface="robotoCondensed" />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_total_points_earned"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="1700!"
                    android:textColor="@color/orange"
                    android:textSize="28sp"
                    app:typeface="robotoBoldCondensed" />

            </LinearLayout>

        </LinearLayout>
    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/business_offer_list_pager_container"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentBottom="true"
        android:elevation="5dp"
        android:visibility="visible"
        app:cardCornerRadius="1dp"
        app:cardElevation="3dp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="visible">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_business_logo"
                android:layout_width="96dp"
                android:layout_height="96dp"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:src="@drawable/ic_running" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_toLeftOf="@id/img_business_logo"
                android:gravity="center"
                android:orientation="vertical">

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_offer_promo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Pamper yourself with a complementary foot message at "
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    app:typeface="robotoBoldCondensed" />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_business_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:gravity="center"
                    android:text="Thai Massage"
                    android:textColor="@color/orange"
                    android:textSize="24sp"
                    app:typeface="robotoCondensed" />

                <Button
                    android:id="@+id/btn_grab_now"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:background="@color/orange"
                    android:minHeight="30dp"
                    android:paddingBottom="5dp"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:paddingTop="5dp"
                    android:text="@string/grap_now"
                    android:textSize="18sp" />

            </LinearLayout>


        </RelativeLayout>


        <!--<cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager
            android:id="@+id/business_offer_list_pager"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </cn.trinea.android.view.autoscrollviewpager.AutoScrollViewPager>-->

    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/activities_fitness_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/business_offer_list_pager_container"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/walking_activity_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_walking"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="2dp"
                    android:src="@drawable/ic_walking" />

                <ProgressBar
                    android:id="@+id/walking_progress_bar"
                    style="?android:attr/android:progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/img_walking" />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_walking_activity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/img_walking"
                    android:gravity="center"
                    android:minWidth="60dp"
                    android:text="10000"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:typeface="robotoCondensed" />

                <View
                    android:id="@+id/txt_walking_activity_border"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignRight="@id/txt_walking_activity_value"
                    android:layout_below="@id/txt_walking_activity_value"
                    android:layout_toRightOf="@id/img_walking"
                    android:background="@android:color/black"
                    android:visibility="visible" />


                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_walking_activity_dimension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/txt_walking_activity_border"
                    android:layout_alignRight="@id/txt_walking_activity_border"
                    android:layout_below="@id/txt_walking_activity_value"
                    android:layout_centerHorizontal="true"
                    android:layout_toRightOf="@id/img_walking"
                    android:gravity="center"
                    android:textColor="@color/torqoise"
                    android:textSize="16sp"
                    android:text="@string/calories_unit"
                    android:visibility="visible"
                    app:typeface="robotoCondensed" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/running_activity_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/img_running"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_running" />

                <ProgressBar
                    android:id="@+id/running_progress_bar"
                    style="?android:attr/android:progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/img_running" />


                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_running_activity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_running"
                    android:gravity="center"
                    android:minWidth="60dp"
                    android:text="50.50"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:visibility="visible"
                    app:typeface="robotoCondensed" />

                <View
                    android:id="@+id/txt_running_activity_border"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignRight="@id/txt_running_activity_value"
                    android:layout_below="@id/txt_running_activity_value"
                    android:layout_toRightOf="@id/img_running"
                    android:background="@android:color/black"
                    android:visibility="visible" />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_running_activity_dimension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/txt_running_activity_border"
                    android:layout_alignRight="@id/txt_running_activity_border"
                    android:layout_below="@id/txt_running_activity_value"
                    android:layout_toRightOf="@id/img_running"
                    android:gravity="center"
                    android:textColor="@color/torqoise"
                    android:textSize="16sp"
                    android:text="@string/distance_dimension"
                    android:visibility="visible"
                    app:typeface="robotoCondensed" />


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/biking_activity_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:id="@+id/img_cycling"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_cycling" />

                <ProgressBar
                    android:id="@+id/cycling_progress_bar"
                    style="?android:attr/android:progressBarStyleSmall"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:layout_toRightOf="@id/img_cycling" />


                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_cycling_activity_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/img_cycling"
                    android:gravity="center"
                    android:minWidth="60dp"
                    android:textColor="@color/orange"
                    android:textSize="20sp"
                    android:text="15000"
                    android:visibility="visible"
                    app:typeface="robotoCondensed" />

                <View
                    android:id="@+id/txt_cycling_activity_border"
                    android:layout_width="wrap_content"
                    android:layout_height="1dp"
                    android:layout_alignRight="@id/txt_cycling_activity_value"
                    android:layout_below="@id/txt_cycling_activity_value"
                    android:layout_toRightOf="@id/img_cycling"
                    android:background="@android:color/black"
                    android:visibility="visible" />


                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_cycling_activity_dimension"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/txt_cycling_activity_border"
                    android:layout_alignRight="@id/txt_cycling_activity_border"
                    android:layout_below="@id/txt_cycling_activity_value"
                    android:layout_toRightOf="@id/img_cycling"
                    android:gravity="center"
                    android:text="@string/steps"
                    android:textColor="@color/torqoise"
                    android:textSize="16sp"
                    android:visibility="visible"
                    app:typeface="robotoCondensed" />


            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/offer_list_progress_bar_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/activities_fitness_container"
        android:visibility="gone">

        <ProgressBar
            style="@style/Widget.AppCompat.ProgressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/activities_fitness_container"
        android:layout_below="@id/points_earned_container"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp">

        <com.hookedonplay.decoviewlib.DecoView
            android:id="@+id/deco_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <ProgressBar
                android:id="@+id/activities_progress_bar"
                style="@style/Widget.AppCompat.ProgressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:visibility="gone" />

            <LinearLayout
                android:layout_width="@dimen/activities_view_pager_width"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                tools:context="com.pluggdd.burnandearn.view.fragment.TotalCaloriesBurnedFragment">


                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_activities_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activities_text_header_footer"
                    android:gravity="center"
                    android:text="you have earned"
                    android:textColor="@color/torqoise"
                    app:typeface="robotoCondensed"
                    />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_activities_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activities_text_size"
                    android:gravity="center"
                    android:text="10000"
                    android:textColor="@color/orange"
                    app:typeface="robotoCondensed"
                    />

                <com.pluggdd.burnandearn.font.RobotoTextView
                    android:id="@+id/txt_activities_unit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/activities_text_header_footer"
                    android:gravity="center"
                    android:text="@string/calories_unit"
                    android:textColor="@color/torqoise"
                    app:typeface="robotoCondensed"
                    />

            </LinearLayout>


            <RelativeLayout
                android:id="@+id/viewpager_indicator_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="25dp"
                android:visibility="visible">

                <ImageView
                    android:id="@+id/viewpager_indicator1_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/viewpager_indicator_selected" />

                <ImageView
                    android:id="@+id/viewpager_indicator2_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_toRightOf="@id/viewpager_indicator1_image"
                    android:src="@drawable/viewpager_indicator_unselected" />

                <ImageView
                    android:id="@+id/viewpager_indicator3_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@id/viewpager_indicator2_image"
                    android:src="@drawable/viewpager_indicator_unselected" />


            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>
