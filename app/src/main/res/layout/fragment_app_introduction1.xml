<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/app_tour_container"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:clipChildren="false"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/installation_screen_white"
    android:paddingTop="28dp"
    android:paddingBottom="48dp">

    <ImageView
        android:id="@+id/img_app_tour_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_circle_logo"
        android:layout_gravity="center"/>

    <ImageView
        android:id="@+id/img_app_tour1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_app_tour1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_centerInParent="true"/>


    <com.pluggdd.burnandearn.font.RobotoTextView
        android:id="@+id/txt_app_tour_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="@string/app_tour1_text_header"
        android:layout_marginTop="10dp"
        android:textAppearance="@style/AppTourHeadingAppearance"
        android:layout_below="@id/img_app_tour1"
        app:typeface="robotoBoldCondensed"/>

    <com.pluggdd.burnandearn.font.RobotoTextView
        android:id="@+id/txt_app_tour_content"
        android:text="@string/app_tour1_content_text"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_below="@id/txt_app_tour_header"
        android:minLines="3"
        android:textAppearance="@style/AppTourContentAppearance"
        android:layout_marginTop="10dp"
        app:typeface="robotoCondensed"/>

</LinearLayout>