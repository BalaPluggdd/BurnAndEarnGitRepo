<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="MaterialThemeBase">
        <!-- Customize your theme here. -->

    </style>

    <style name="MaterialThemeBase" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--<item name="android:spinnerStyle">@style/mySpinnerItemStyle</item>-->

    </style>

    <style name="CustomMaterialThemeBase" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@android:color/darker_gray</item>

    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Parent theme sets colorControlNormal to textColorPrimary. -->
        <item name="android:textColorPrimary">@color/colorAccent</item>
    </style>

    <style name="mySpinnerItemStyle" parent="@android:style/Widget.Holo.DropDownItem.Spinner">
        <item name="android:textColor">@android:color/black</item>

    </style>

    <!--<style name="CustomMaterialThemeBase" parent="Theme.AppCompat.NoActionBar">
        &lt;!&ndash; Customize your theme here. &ndash;&gt;
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="actionMenuTextColor">@color/colorAccent</item>

    </style>-->

    <style name="AppTourHeadingAppearance" parent="@android:style/TextAppearance.Large">
        <item name="android:textSize">@dimen/app_tour_heading</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTourContentAppearance" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/app_tour_content</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
